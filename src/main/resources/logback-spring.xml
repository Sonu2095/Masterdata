<configuration>
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/amsp-master-data.log"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- Daily rollover + max file size -->
			<fileNamePattern>${LOG_PATH}/amsp-master-data.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>5</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
	
	 <!--  Audit Logging -->
	<appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/audit/amsp-master-data-audit.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<!-- Daily rollover + max file size -->
			<fileNamePattern>${LOG_PATH}/audit/amsp-master-data-audit.%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>5</maxHistory>
			<totalSizeCap>1GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- Logger for AUDIT -->
	<logger name="AUDIT" level="INFO" additivity="false">
		<appender-ref ref="AUDIT_FILE"/>
	</logger>

    <!-- Loggers -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
    </root>
</configuration>
